#include <stdio.h>

int main() {
    double t1, t2, t3;
    
    // Введення часу, за який кожен гість може з'їсти пиріг
    scanf("%lf %lf %lf", &t1, &t2, &t3);
    
    // Розрахунок часу, за який всі троє гостей разом з'їдять пиріг
    double total_time = 1 / (1/t1 + 1/t2 + 1/t3);
    
    // Вивід результату, округленого до 2 знаків після коми
    printf("%.2lf\n", total_time);
    
    return 0;
}
